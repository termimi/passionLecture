<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="passionLecture.livres"
             Title="livres">
    <VerticalStackLayout x:Name="booksPage">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
       

        <Button
            x:Name="voirPlus"
            Text="Voir Livre"
            SemanticProperties.Hint="Affiche la liste de tout les livres"
            Clicked="GetBooks2"
            WidthRequest="200"
            HeightRequest="100"
            HorizontalOptions="Fill">   
        </Button>
        <Label 
            x:Name="allBooksLabel"
            Text="Livre"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


    </VerticalStackLayout>
</ContentPage>