<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="passionLecture.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:passionLecture"
    Shell.FlyoutBehavior="Disabled"
    Title="passionLecture"
    TabBarIsVisible="True" >
    


    <TabBar>
        <Tab Title="Accueil">
            <ShellContent
             Title="Home"
             ContentTemplate="{DataTemplate local:MainPage}"
             Route="MainPage" />
        </Tab>
        <Tab Title="Livres">
            <ShellContent
                Title="Livres"   
                ContentTemplate="{DataTemplate local:livres}"
                Route="livres"
            />
        </Tab>
    </TabBar>
</Shell>
